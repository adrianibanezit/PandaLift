---
// src/pages/signup.astro
import SignupForm from '../components/SignupForm.jsx';
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>PandaLift - Registro</title>
  </head>
  <body class="font-sans p-8 bg-gray-50">
    <main class="max-w-md mx-auto bg-white p-6 rounded shadow">
      <h1 class="text-2xl font-bold text-center mb-4">Registro en PandaLift</h1>
      <SignupForm client:load />
      <p class="mt-4 text-center">
        ¿Ya tienes cuenta?
        <a href="/" class="text-blue-600 underline">Inicia sesión</a>
      </p>
    </main>
  </body>
</html>
