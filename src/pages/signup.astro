---
// src/pages/signup.astro
import SignupForm from '../components/react/SignupForm.jsx';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>PandaLift - Registro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Regístrate en PandaLift y lleva tus entrenamientos al siguiente nivel." />
    <link rel="icon" href="/favicon_panda.png" />
  </head>
  <body class="font-sans bg-[#0b1120] text-white min-h-screen flex items-center justify-center relative antialiased">

    <!-- Fondo Glow -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
      <div class="absolute left-1/2 top-0 w-[48rem] -translate-x-1/2 bg-gradient-to-tr from-blue-500/30 via-blue-600/10 to-transparent h-[40rem] blur-3xl opacity-40"></div>
      <div class="absolute right-0 bottom-0 w-1/2 h-1/3 bg-gradient-to-tr from-blue-500/30 via-blue-400/10 to-transparent blur-2xl opacity-20"></div>
    </div>

    <main class="w-full flex flex-col items-center justify-center px-4 min-h-screen">
      <section class="w-full max-w-lg bg-white/5 backdrop-blur-md rounded-2xl border border-slate-700 shadow-xl px-8 py-10 flex flex-col items-center">
        <h1 class="text-3xl font-extrabold mb-6 text-center tracking-tight">
          Registro en <span class="text-blue-400">PandaLift</span>
        </h1>
        <SignupForm client:load />
        <p class="mt-6 text-center text-slate-400">
          ¿Ya tienes cuenta?
          <a href="/login" class="text-blue-400 hover:underline ml-2">Inicia sesión</a>
        </p>
      </section>
    </main>
  </body>
</html>
