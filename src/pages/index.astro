---
// src/pages/index.astro
import LoginForm from '../components/LoginForm.jsx';
import GoogleLogin from "../components/GoogleLogin.jsx";
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Bienvenido a PandaLift</title>
  </head>
  <body class="font-sans min-h-screen bg-gray-50 flex items-stretch">
    <main class="flex flex-1 flex-col md:flex-row rounded-2xl overflow-hidden shadow-lg m-4 bg-white">
      {/* Lado Izquierdo: Login */}
      <section class="flex-1 flex flex-col justify-center items-center p-8 bg-white">
        <h1 class="text-5xl font-black mb-8 tracking-tight"><span class="text-black">PANDA</span><span class="text-gray-400">LIFT</span></h1>
        <div class="w-full max-w-sm">
          <LoginForm client:load />
          <div class="space-y-3">
            <GoogleLogin client:load />
          </div>
        </div>
      </section>
      {/* Lado Derecho: Imagen y mensaje */}
      <section class="hidden md:flex flex-1 flex-col justify-center items-center bg-gradient-to-br from-gray-300 to-gray-500 relative">
        <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_30%_30%,white,transparent_70%)]"></div>
        <div class="relative z-10 flex flex-col items-center justify-center h-full w-full">
          <div class="flex flex-col md:flex-row items-center justify-center gap-6 bg-white/30 rounded-2xl p-8 shadow-lg max-w-2xl border border-white/60 backdrop-blur-md">
            <div class="flex-1 text-left">
              <p class="text-3xl md:text-4xl font-extrabold text-white mb-0 leading-tight drop-shadow-lg">
                Donde<br />entrenadores<br />y atletas<br />crecen juntos.
              </p>
            </div>
            <div class="flex-1 flex items-center justify-center">
              <img src="/pandalift.png" alt="Panda levantando pesas" class="w-56 md:w-64 drop-shadow-2xl rounded-2xl border-4 border-white/70 bg-white/60" />
            </div>
          </div>
        </div>
      </section>
    </main>
  </body>
</html>

