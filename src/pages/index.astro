---
// src/pages/index.astro
import LoginForm from '../components/LoginForm.jsx';
import GoogleLogin from "../components/GoogleLogin.jsx";
import { Astro } from 'astro';
import '../styles/global.css';
---

<html lang="es">
<meta charset="UTF-8" />
  <head>
    <title>Bienvenido a PandaLift</title>
  </head>
  <body class="font-sans p-8 bg-gray-50">
    <div class="max-w-md mx-auto bg-white p-6 rounded shadow space-y-4">
      <LoginForm client:load />

      <div class="text-center">
        <GoogleLogin client:load />
      </div>

      <p class="mt-4 text-center">
        ¿No tienes cuenta?
        <a href="/signup" class="text-blue-600 underline">Regístrate</a>
      </p>
    </div>
  </body>
</html>

